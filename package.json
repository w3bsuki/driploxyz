{
  "name": "driplo-turbo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --ui=tui",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo test",
    "test:performance": "playwright test performance-tests/ --config=playwright.config.performance.ts",
    "lighthouse": "lhci autorun",
    "bundle-analysis": "node performance-tests/bundle-analysis.js",
    "performance-audit": "npm run lighthouse && npm run bundle-analysis && npm run test:performance",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.40.0",
    "prettier": "^3.0.0",
    "turbo": "2.5.4",
    "typescript": "^5.0.0",
    "web-vitals": "^3.5.0"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@repo/core-auth": "workspace:^",
    "@repo/core-cookies": "workspace:^"
  }
}