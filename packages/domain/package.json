{
  "name": "@repo/domain",
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "node": ">=22.12.0 <23"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./cart": {
      "types": "./dist/cart/index.d.ts",
      "import": "./dist/cart/index.js",
      "default": "./dist/cart/index.js"
    },
    "./products": {
      "types": "./dist/products/index.d.ts",
      "import": "./dist/products/index.js",
      "default": "./dist/products/index.js"
    },
    "./auth": {
      "types": "./dist/auth/index.d.ts",
      "import": "./dist/auth/index.js",
      "default": "./dist/auth/index.js"
    },
    "./orders": {
      "types": "./dist/orders/index.d.ts",
      "import": "./dist/orders/index.js",
      "default": "./dist/orders/index.js"
    },
    "./users": {
      "types": "./dist/users/index.d.ts",
      "import": "./dist/users/index.js",
      "default": "./dist/users/index.js"
    },
    "./payments": {
      "types": "./dist/payments/index.d.ts",
      "import": "./dist/payments/index.js",
      "default": "./dist/payments/index.js"
    },
    "./shared": {
      "types": "./dist/shared/index.d.ts",
      "import": "./dist/shared/index.js",
      "default": "./dist/shared/index.js"
    },
    "./conversations": {
      "types": "./dist/conversations/index.d.ts",
      "import": "./dist/conversations/index.js",
      "default": "./dist/conversations/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "check-types": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage --threshold=80"
  },
  "dependencies": {
    "@repo/database": "workspace:*",
    "@repo/core": "workspace:*",
    "@supabase/supabase-js": "^2.56.0",
    "zod": "^3.0.0"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^2.0.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "eslint": "^9.31.0",
    "tsup": "^8.0.0",
    "typescript": "^5.8.2",
    "vitest": "^3.2.4"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts"
}