{
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
  "declaration": false,
    "declarationMap": false,
    "allowArbitraryExtensions": true,
    "target": "ES2022",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*.svelte", "./src/**/*.ts", "./src/**/*.d.ts", "eslint.config.ts", "index.ts", "svelte.config.js", "vite.config.ts", "vitest.config.ts", "src/test-setup.ts"],
  "exclude": ["node_modules", "dist"]
}
