{
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": false,
    "allowArbitraryExtensions": true,
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*.svelte", "./src/**/*.ts", "./src/**/*.d.ts", "eslint.config.ts", "index.ts", "svelte.config.js", "vite.config.ts", "vitest.config.ts", "src/test-setup.ts"],
  "exclude": ["node_modules", "dist"]
}
