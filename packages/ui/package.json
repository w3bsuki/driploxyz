{
  "name": "@repo/ui",
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=22.12.0 <23"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "svelte-package -o dist",
    "dev": "svelte-package -o dist --watch",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage --threshold=50",
    "test:components": "vitest run src/test/*.test.ts",
    "lint": "eslint .",
    "format": "prettier --write .",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./src/lib/index.ts",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    },
    "./primitives": {
      "types": "./dist/primitives/index.d.ts",
      "svelte": "./src/lib/primitives/index.ts",
      "default": "./dist/primitives/index.js"
    },
    "./primitives/toast": {
      "types": "./dist/primitives/toast/index.d.ts",
      "svelte": "./src/lib/primitives/toast/index.ts",
      "default": "./dist/primitives/toast/index.js"
    },
    "./primitives/*": {
      "types": "./dist/primitives/*/index.d.ts",
      "svelte": "./src/lib/primitives/*/index.ts",
      "default": "./dist/primitives/*/index.js"
    },
    "./compositions": {
      "types": "./dist/compositions/index.d.ts",
      "svelte": "./src/lib/compositions/index.ts",
      "default": "./dist/compositions/index.js"
    },
    "./compositions/*": {
      "types": "./dist/compositions/*/index.d.ts",
      "svelte": "./src/lib/compositions/*/index.ts",
      "default": "./dist/compositions/*/index.js"
    },
    "./layouts": {
      "types": "./dist/layouts/index.d.ts",
      "svelte": "./src/lib/layouts/index.ts",
      "default": "./dist/layouts/index.js"
    },
    "./layouts/*": {
      "types": "./dist/layouts/*.d.ts",
      "svelte": "./src/lib/layouts/*.svelte",
      "default": "./dist/layouts/*.js"
    },
    "./styles/tokens.css": "./src/styles/tokens.css",
    "./styles/tokens-v4/tokens.css": "./src/styles/tokens-v4/tokens.css",
    "./styles/tokens-v4/foundations.css": "./src/styles/tokens-v4/foundations.css",
    "./styles/tokens-v4/semantic.css": "./src/styles/tokens-v4/semantic.css",
    "./styles/tokens-v4/components.css": "./src/styles/tokens-v4/components.css",
    "./styles/tokens-v4/dark-theme.css": "./src/styles/tokens-v4/dark-theme.css",
    "./styles/tokens-v4/legacy.css": "./src/styles/tokens-v4/legacy.css",
    "./styles/semantic.css": "./src/styles/semantic.css",
    "./styles/utilities.css": "./src/styles/utilities.css",
    "./styles/base.css": "./src/styles/base.css",
    "./styles/components.css": "./src/styles/components.css"
  },
  "files": [
    "dist",
    "src/styles",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "@stripe/stripe-js": "^7.8.0",
    "@supabase/supabase-js": "^2.56.0",
    "@sveltejs/kit": "^2.0.0",
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^4.0.0",
    "@sveltejs/kit": "^2.36.2",
    "@sveltejs/package": "^2.5.0",
    "@sveltejs/vite-plugin-svelte": "^6.1.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/node": "^22.0.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.31.0",
    "prettier": "^3.6.0",
    "svelte": "^5.36.12",
    "svelte-check": "^4.0.0",
    "typescript": "^5.8.2",
    "vite": "^7.1.2",
    "vitest": "^3.2.4",
    "storybook": "^9.1.10",
    "@storybook/svelte-vite": "^9.1.10",
    "@storybook/addon-svelte-csf": "^5.0.10",
    "@storybook/addon-docs": "^9.1.10",
    "eslint-plugin-storybook": "^9.1.10"
  },
  "dependencies": {
    "@repo/database": "workspace:*",
    "@repo/i18n": "workspace:*",
    "clsx": "^2.0.0",
    "tslib": "^2.7.0",
    "zod": "^3.22.4"
  }
}
