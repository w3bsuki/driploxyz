{
  "name": "@repo/i18n",
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=22.12.0 <23"
  },
  "scripts": {
    "build": "pnpm run clean && pnpm run compile && pnpm run types",
    "compile": "paraglide-js compile --project ./project.inlang --outdir ./lib/paraglide",
    "precompile": "pnpm run clean",
    "types": "tsc",
    "dev": "pnpm run compile",
    "clean": "rimraf lib dist"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts", 
      "import": "./lib/index.js",
      "default": "./lib/index.js"
    }
  },
  "files": [
    "lib",
    "messages"
  ],
  "dependencies": {
    "@inlang/paraglide-js": "2.2.0"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.2"
  }
}
