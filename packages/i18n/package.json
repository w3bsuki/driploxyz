{
  "name": "@repo/i18n",
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=22.12.0 <23"
  },
  "scripts": {
    "build": "pnpm run clean && pnpm run generate && pnpm run types",
    "compile": "pnpm run generate",
    "generate": "node ./scripts/generate-message-exports.mjs",
    "types": "tsc",
    "dev": "pnpm run generate && tsc --watch",
    "clean": "rimraf lib dist",
    "lint": "eslint .",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts", 
      "import": "./lib/index.js",
      "default": "./lib/index.js"
    }
  },
  "files": [
    "lib",
    "messages"
  ],
  "dependencies": {
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "eslint": "^9.31.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.2",
    "vitest": "^2.0.0"
  }
}
