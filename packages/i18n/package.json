{
  "name": "@repo/i18n",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "pnpm run clean && pnpm run compile && pnpm run copy-runtime && pnpm run types",
    "compile": "paraglide-js compile --project ./project.inlang --outdir ./src/paraglide",
    "types": "tsc",
    "copy-runtime": "mkdir -p lib/paraglide && cp -r src/paraglide/* lib/paraglide/ 2>/dev/null || true",
    "dev": "pnpm run compile",
    "clean": "rm -rf lib dist src/paraglide"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts", 
      "import": "./lib/index.js",
      "default": "./lib/index.js"
    }
  },
  "files": [
    "lib",
    "messages"
  ],
  "dependencies": {
    "@inlang/paraglide-js": "2.2.0"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "typescript": "^5.8.2"
  }
}
