{
  "name": "@repo/core",
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=22.12.0 <23"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    },
    "./services": {
      "types": "./dist/services/index.d.ts",
      "default": "./dist/services/index.js"
    },
    "./email": {
      "types": "./dist/email/index.d.ts",
      "default": "./dist/email/index.js"
    },
    "./email/resend": {
      "types": "./dist/email/resend.d.ts",
      "default": "./dist/email/resend.js"
    },
    "./validation": {
      "types": "./dist/validation/index.d.ts",
      "default": "./dist/validation/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    },
    "./stripe": {
      "types": "./dist/stripe/index.d.ts",
      "default": "./dist/stripe/index.js"
    },
    "./stripe/server": {
      "types": "./dist/stripe/server.d.ts",
      "default": "./dist/stripe/server.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "check-types": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage --threshold=70"
  },
  "dependencies": {
    "@repo/database": "workspace:*",
    "nanoid": "^4.0.2",
    "slugify": "^1.6.6",
    "stripe": "18.4.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "eslint": "^9.31.0",
    "tsup": "^8.0.0",
    "typescript": "^5.8.2",
    "vitest": "^3.2.4"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts"
}