{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "no-referrer-when-downgrade"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/(.*)",
      "destination": "https://driplo.xyz/bg/$1",
      "permanent": true,
      "has": [
        {
          "type": "host",
          "value": "bg.driplo.xyz"
        }
      ]
    },
    {
      "source": "/(.*)",
      "destination": "https://driplo.xyz/$1",
      "permanent": true,
      "has": [
        {
          "type": "host",
          "value": "uk.driplo.xyz"
        }
      ]
    },
    {
      "source": "/(.*)",
      "destination": "https://driplo.xyz/$1",
      "permanent": true,
      "has": [
        {
          "type": "host",
          "value": "en.driplo.xyz"
        }
      ]
    }
  ]
}