# Database Configuration
PUBLIC_SUPABASE_URL=your_supabase_project_url
PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Authentication Configuration
PUBLIC_AUTH_REDIRECT_URL=http://localhost:5173/auth/callback
PUBLIC_AUTH_SITE_URL=http://localhost:5173

# OAuth Providers (optional - leave empty to disable)
PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
PUBLIC_GOOGLE_CLIENT_SECRET=your_google_client_secret

PUBLIC_FACEBOOK_CLIENT_ID=your_facebook_client_id
PUBLIC_FACEBOOK_CLIENT_SECRET=your_facebook_client_secret

PUBLIC_GITHUB_CLIENT_ID=your_github_client_id
PUBLIC_GITHUB_CLIENT_SECRET=your_github_client_secret

# Application Configuration
PUBLIC_APP_NAME=Driplo
PUBLIC_APP_URL=http://localhost:5173
PUBLIC_APP_DESCRIPTION=A marketplace for second-hand fashion

# Environment
NODE_ENV=development

# Feature Flags
PUBLIC_ENABLE_ANALYTICS=false
PUBLIC_ENABLE_DEBUG_TOOLS=true
PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# Rate Limiting (in production)
RATE_LIMIT_REDIS_URL=redis://localhost:6379
RATE_LIMIT_REDIS_PASSWORD=your_redis_password
RATE_LIMIT_SECRET=your_rate_limit_secret_key

# Monitoring (in production)
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development

# Stripe (for payments)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Email (for notifications)
RESEND_API_KEY=your_resend_api_key
FROM_EMAIL=noreply@driplo.com

# Image Storage (in production)
IMAGE_STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket

# Search (in production)
ALGOLIA_APP_ID=your_algolia_app_id
ALGOLIA_SEARCH_API_KEY=your_algolia_search_api_key

# Cache (in production)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Content Delivery Network (in production)
CDN_URL=https://cdn.driplo.com

# API Keys (in production)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Logging (in production)
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/driplo/app.log

# Security (in production)
CORS_ORIGIN=https://driplo.com
CSRF_SECRET=your_csrf_secret
JWT_SECRET=your_jwt_secret

# Performance (in production)
ENABLE_BUNDLE_ANALYZER=false
ENABLE_SERVICE_WORKER=true
CACHE_TTL=3600

# Localization
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,bg,de,fr,es,it,pt,ro,ru,tr

# Analytics (in production)
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# Error Reporting (in production)
ERROR_REPORTING_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
