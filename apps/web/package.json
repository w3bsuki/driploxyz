{
	"name": "web",
	"version": "1.0.2",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:full": "vite dev",
		"build": "svelte-kit sync && vite build",
		"build:metrics": "node ./scripts/build-report.mjs",
		"preview": "vite preview",
		"test": "pnpm exec svelte-kit sync && vitest run && playwright test",
		"test:watch": "pnpm dlx vitest@3.2.4",
		"test:ui": "pnpm dlx vitest@3.2.4 --ui",
		"test:e2e": "pnpm dlx playwright@1.56.0 test",
		"test:unit": "pnpm dlx vitest@3.2.4 run",
		"test:coverage": "pnpm dlx vitest@3.2.4 run --coverage --threshold=40",
		"test:e2e:ui": "pnpm dlx playwright@1.56.0 test --ui",
		"test:e2e:headed": "pnpm dlx playwright@1.56.0 test --headed",
		"test:e2e:debug": "pnpm dlx playwright@1.56.0 test --debug",
		"test:e2e:critical": "node scripts/run-tests.mjs --suite critical",
		"test:e2e:user": "node scripts/run-tests.mjs --suite user",
		"test:e2e:seller": "node scripts/run-tests.mjs --suite seller",
		"test:e2e:mobile": "node scripts/run-tests.mjs --suite mobile --project mobile-chrome",
		"test:e2e:accessibility": "node scripts/run-tests.mjs --suite accessibility",
		"test:e2e:full": "node scripts/run-tests.mjs --suite full-coverage",
		"check-types": "svelte-kit sync && tsc --noEmit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint .",
		"audit:lh": "lhci autorun --config=./lighthouserc.cjs"
	},
	"dependencies": {
		"@lucide/svelte": "^0.542.0",
		"@repo/core": "workspace:*",
		"@repo/database": "workspace:*",
		"@repo/domain": "workspace:*",
		"@repo/i18n": "workspace:*",
		"@repo/ui": "workspace:*",
		"@sentry/sveltekit": "^10.5.0",
		"@stripe/stripe-js": "^7.8.0",
		"@supabase/ssr": "0.7.0",
		"@supabase/supabase-js": "^2.56.0",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"web-vitals": "^5.1.0",
		"resend": "^6.0.1",
		"sharp": "^0.34.3",
		"stripe": "18.4.0",
		"sveltekit-rate-limiter": "^0.7.0",
		"zod": "^3"
	},
	"devDependencies": {
		"@axe-core/playwright": "^4.10.0",
		"@lhci/cli": "^0.14.0",
		"@playwright/test": "^1.56.0",
		"@repo/eslint-config": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@sentry/vite-plugin": "^4.1.1",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/adapter-vercel": "^5.10.2",
		"@sveltejs/enhanced-img": "^0.8.1",
		"@sveltejs/kit": "^2.36.2",
		"@sveltejs/vite-plugin-svelte": "^6.1.2",
		"@tailwindcss/vite": "^4.1.12",
		"eslint": "^9.31.0",
		"jsdom": "^27.0.0",
		"playwright": "^1.55.0",
		"prettier": "^3.6.0",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.36.12",
		"svelte-check": "^4.3.0",
		"tailwindcss": "^4.1.12",
		"tslib": "^2.8.1",
		"typescript": "5.8.2",
		"vite": "^7.1.2",
		"vitest": "^3.2.4"
	},
	"engines": {
		"node": ">=22.12.0 <23"
	}
}
