{
	"name": "web",
	"version": "1.0.2",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev --config vite.dev.config.ts",
		"dev:full": "vite dev",
		"build": "svelte-kit sync && vite build",
		"build:metrics": "node ./scripts/build-report.mjs",
		"preview": "vite preview",
		"test": "svelte-kit sync && vitest run && playwright test",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:e2e": "playwright test",
		"test:unit": "vitest run",
		"test:coverage": "vitest run --coverage --threshold=40",
		"check-types": "tsc --noEmit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint ."
	},
	"dependencies": {
		"@lucide/svelte": "^0.542.0",
		"@sentry/sveltekit": "^10.5.0",
		"@repo/core": "workspace:*",
		"@repo/database": "workspace:*",
		"@repo/domain": "workspace:*",
		"@repo/i18n": "workspace:*",
		"@repo/ui": "workspace:*",
		"@stripe/stripe-js": "^7.8.0",
		"@supabase/ssr": "0.7.0",
		"@supabase/supabase-js": "^2.56.0",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"resend": "^6.0.1",
		"sharp": "^0.34.3",
		"stripe": "18.4.0",
		"sveltekit-rate-limiter": "^0.7.0",
		"zod": "^3"
	},
	"devDependencies": {
		"@sentry/vite-plugin": "^4.1.1",
		"@repo/eslint-config": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/adapter-vercel": "^5.10.2",
		"@sveltejs/enhanced-img": "^0.8.1",
		"@sveltejs/kit": "^2.36.2",
		"@sveltejs/vite-plugin-svelte": "^6.1.2",
		"@tailwindcss/vite": "^4.1.12",
		"eslint": "^9.31.0",
		"prettier": "^3.6.0",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.36.12",
		"svelte-check": "^4.3.0",
		"tailwindcss": "^4.1.12",
		"tslib": "^2.8.1",
		"typescript": "5.8.2",
		"vite": "^7.1.2",
		"vitest": "^3.2.4"
	},
	"engines": {
		"node": ">=22.12.0 <23"
	}
}
