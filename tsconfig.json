{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "noEmit": true
  },
  "exclude": [
    "**/node_modules",
    "**/.svelte-kit",
    "**/.turbo",
    "**/.vercel",
    "**/dist",
    "**/build",
    "packages/mobile-shared/**"
  ]
}
