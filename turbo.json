{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "VERCEL",
    "VERCEL_ENV"
  ],
  "globalDependencies": [
    "tsconfig.json",
    "package.json"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*",
        "!**/*.test.{ts,js}",
        "!**/*.spec.{ts,js}",
        "!**/tests/**",
        "!**/test-results/**"
      ],
      "outputs": [
        ".svelte-kit/**",
        ".vercel/**",
        "dist/**",
        "build/**",
        "lib/**",
        ".expo/**"
      ],
      "env": [
        "PUBLIC_STRIPE_PUBLISHABLE_KEY",
        "STRIPE_SECRET_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "PUBLIC_SUPABASE_URL",
        "PUBLIC_SUPABASE_ANON_KEY",
        "SUPABASE_SERVICE_ROLE_KEY",
        "RESEND_API_KEY",
        "PUBLIC_SENTRY_DSN",
        "SENTRY_DSN",
        "SENTRY_ORG",
        "SENTRY_PROJECT",
        "SENTRY_AUTH_TOKEN",
        "SENTRY_RELEASE",
        "PUBLIC_SITE_URL",
        "EXPO_PUBLIC_SUPABASE_URL",
        "EXPO_PUBLIC_SUPABASE_ANON_KEY",
        "EXPO_PUBLIC_SENTRY_DSN"
      ]
    },
    "topo": {
      "dependsOn": ["^topo"]
    },
    "lint": {
      "dependsOn": ["topo"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "eslint.config.*",
        ".eslintrc.*"
      ]
    },
    "check-types": {
      "dependsOn": ["topo"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "tsconfig.json",
        "!**/*.test.{ts,js}",
        "!**/*.spec.{ts,js}"
      ],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "mobile#dev": {
      "cache": false,
      "persistent": true
    },
    "mobile#build": {
      "outputs": ["dist/**", ".expo/**"],
      "dependsOn": ["^build"]
    },
    "mobile#start": {
      "cache": false,
      "persistent": true
    },
    "mobile#android": {
      "cache": false,
      "persistent": true
    },
    "mobile#ios": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "src/**/*.{test,spec}.{js,ts}", "tests/**/*.{js,ts}"],
      "outputs": ["coverage/**"]
    },
    "test:unit": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "src/**/*.{test,spec}.{js,ts}"],
      "outputs": ["coverage/**"]
    },
    "test:integration": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "tests/**/*.{js,ts}", "playwright.config.ts"],
      "outputs": ["test-results/**", "playwright-report/**"]
    },
    "test:ui": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "src/**/*.{test,spec}.{js,ts}"],
      "outputs": ["coverage/**"]
    }
  }
}
